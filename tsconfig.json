{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "webpack-env"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@img/*": [
        "src/assets/img/*"
      ],
      "@less/*": [
        "src/assets/less/*"
      ],
      "@css/*": [
        "src/assets/css/*"
      ],
      "@fonts/*": [
        "src/assets/fonts/*"
      ],
      "@libs/*": [
        "src/libs/*"
      ],
      "@cp/*": [
        "src/components/*"
      ],
      "@views/*": [
        "src/views/*"
      ],
      "@plugins/*": [
        "src/plugins/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
